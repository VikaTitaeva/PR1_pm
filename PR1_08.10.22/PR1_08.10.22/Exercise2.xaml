<Window x:Class="PR1_08._10._22.Exercise2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR1_08._10._22"
        mc:Ignorable="d"
        Title="Exercise2" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="Ex2Text_txtbl" HorizontalAlignment="Center" Margin="0,60,0,0" Text="Дана строка. Если она представляет собой запись целого числа, то вывести 1; если вещественного (с дробной частью), то вывести 2; если строку нельзя преобразовать в число, то вывести 0." TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" TextAlignment="Center" Width="740"/>
        <TextBox x:Name="Input2_txtbx" HorizontalAlignment="Center" Margin="0,130,0,0" Text="Введите строку" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Height="24" FontSize="14"/>
        <Button x:Name="Done2_btn" Content="Применить" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Width="308" Height="24" FontSize="14" Click="Done2_btn_Click"/>
        <TextBox x:Name="Output2_txtbx" HorizontalAlignment="Center" Margin="0,230,0,0" Text="Ответ" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" Height="24" FontSize="14"/>

    </Grid>
</Window>
